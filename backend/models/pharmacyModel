const mongoose = require('mongoose');

const Schema = mongoose.Schema;

const medicineSchema = new Schema({
  name: {
    type: String,
    required: true,
  },
  manufacturer: {
    type: String,
    required: true,
  },
  medicinalUse: {
    type: String,
    required: true,
  },
  dosage: {
    type: String,
    required: true,
  },
  price: {
    type: Number,
    required: true,
  },
  quantity: {
    type: Number,
    required: true,
  },
  prescriptionRequired: {
    type: Boolean,
    required: true,
  },
}, { timestamps: true });

module.exports = mongoose.model('Medicine', medicineSchema);
